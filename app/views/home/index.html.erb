<div class="large-6 large-centered small-6 small-centered text-center columns">
	<h2>PQRST</h2>
	<h3>Pain Tracker</h3>
</div>

<% if signed_in? %>

<section>
	<%= simple_form_for @complaint do |f| %>
		<%= f.error_notification %>

		<div class="large-6 large-centered small-6 small-centered text-center columns">
		<%= f.input :provoke, label: false, :placeholder => "What provoked your pain?", input_html: { class: ''} %>
		</div>

		<div class="large-6 large-centered small-6 small-centered text-center columns">
		<%= f.input :quality, label: false, :placeholder => "What's the quality of your pain?", input_html: { class: ''} %>
		</div>

		<div class="large-6 large-centered small-6 small-centered text-center columns">
		<%= f.input :radiation, label: false, :placeholder => "Does your pain radiate anywhere?", input_html: { class: ''} %>
		</div>

		<div class="large-6 large-centered small-6 small-centered text-center columns">
		<%= f.input :severity, label: "What's the severity of your pain?", :placeholder => "What's the severity of your pain?", collection: 1..10 %>
		</div>

		<div class="large-6 large-centered small-6 small-centered text-center columns">
		<%= f.input :time, label: false, :placeholder => "When did this pain start?", input_html: { class: ''} %>
		</div>

		<div class="large-centered small-centered text-center columns">
		<%= f.button :submit, "Record Pain" ,:class => "submit"  %>
		</div>
	<% end %>
</section>
<% end %>