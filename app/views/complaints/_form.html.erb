    <div class="large-3 columns">
    <%= f.input :time, label: false, as: :text, :placeholder => "When did this pain start?", input_html: { class: ''} %>
    </div>

    <div class="large-3 large-centered columns">
    <%= f.input :severity, label: "What's the severity of your pain?", :placeholder => "What's the severity of your pain?", collection: 1..10 %>
